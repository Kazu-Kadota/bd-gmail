{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".build",
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".idea/**/*",
    "dist/**/*",
    "tests/**/*"
  ]
}
